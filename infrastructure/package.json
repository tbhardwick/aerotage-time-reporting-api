{
  "name": "aerotage-time-api-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Aerotage Time Reporting API",
  "main": "bin/aerotage-time-api.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "synth": "cdk synth",
    "deploy": "cdk deploy",
    "diff": "cdk diff",
    "destroy": "cdk destroy",
    "bootstrap": "cdk bootstrap",
    "build:docs": "node ../scripts/build-openapi.js",
    "build:docs:dev": "node ../scripts/build-openapi.js dev https://time-api-dev.aerotage.com/",
    "build:docs:staging": "node ../scripts/build-openapi.js staging https://time-api-staging.aerotage.com/",
    "build:docs:prod": "node ../scripts/build-openapi.js prod https://time-api.aerotage.com/",
    "deploy:dev": "npm run build:docs:dev && STAGE=dev cdk deploy --all",
    "deploy:staging": "npm run build:docs:staging && STAGE=staging cdk deploy --all",
    "deploy:prod": "npm run build:docs:prod && STAGE=prod cdk deploy --all"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.149",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^20.0.0",
    "@types/uuid": "^10.0.0",
    "aws-cdk": "^2.165.0",
    "esbuild": "^0.25.4",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.658.1",
    "@aws-sdk/client-dynamodb": "^3.658.1",
    "@aws-sdk/client-eventbridge": "^3.817.0",
    "@aws-sdk/client-ses": "^3.658.1",
    "@aws-sdk/lib-dynamodb": "^3.658.1",
    "@aws-sdk/util-dynamodb": "^3.658.1",
    "aws-cdk-lib": "^2.165.0",
    "bcryptjs": "^2.4.3",
    "constructs": "^10.3.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "source-map-support": "^0.5.21",
    "uuid": "^10.0.0"
  },
  "keywords": [
    "aws",
    "cdk",
    "typescript",
    "aerotage",
    "time-tracking",
    "api"
  ],
  "author": "Aerotage Design Group",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
