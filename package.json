{
  "name": "aerotage-time-reporting-api",
  "version": "1.0.0",
  "description": "AWS serverless backend infrastructure and API for the Aerotage Time Reporting Application",
  "main": "index.js",
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint . --ext .ts --max-warnings 0",
    "lint:summary": "echo 'Running ESLint...' && npm run lint && echo '\nâœ… Linting complete! Only warnings remain (console.log in Lambda functions is acceptable for logging)'",
    "deploy:dev": "cd infrastructure && npm run deploy:dev",
    "deploy:staging": "cd infrastructure && npm run deploy:staging",
    "deploy:prod": "cd infrastructure && npm run deploy:prod",
    "diff:dev": "cd infrastructure && npm run diff:dev",
    "destroy:dev": "cd infrastructure && npm run destroy:dev",
    "synth": "cd infrastructure && npm run synth",
    "cdk": "cd infrastructure && cdk"
  },
  "keywords": [
    "aws",
    "serverless",
    "api",
    "time-tracking",
    "cdk",
    "lambda",
    "dynamodb",
    "cognito",
    "backend",
    "infrastructure"
  ],
  "author": "Aerotage Design Group, Inc.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aerotage/aerotage-time-reporting-api.git"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.0.0",
    "@aws-sdk/client-dynamodb": "^3.0.0",
    "@aws-sdk/client-s3": "^3.0.0",
    "aws-cdk-lib": "^2.198.0",
    "aws-lambda": "^1.0.7",
    "constructs": "^10.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/aws-lambda": "^8.10.149",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
